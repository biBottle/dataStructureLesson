class Solution {
public:
    bool isToeplitzMatrix(vector<vector<int>>& matrix) {
        bool result = true;
        int raws = matrix.size();
        int cols = matrix[0].size();
        
        for( int i = 0; i < raws - 1 ; i++ ){
            for(int j = 0; j < cols - 1 ; j++ ){
                if(matrix[i][j] != matrix[i+1][j+1])
                {
                    result = false;
                }
            }
        }

        return result;
    }
};
